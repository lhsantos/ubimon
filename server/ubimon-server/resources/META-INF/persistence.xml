<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
        http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="ubimon">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

		<class>org.ubimon.server.model.Client</class>
		<class>org.ubimon.server.model.Player</class>
		<class>org.ubimon.server.model.Ubimon</class>

		<properties>
			<!-- JDBC -->
			<property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver" />
			<property name="javax.persistence.jdbc.url"
				value="jdbc:hsqldb:file:db/ubimon/ubimon;shutdown=true;hsqldb.write_delay_millis=0" />
			<property name="javax.persistence.jdbc.user" value="sa" />
			<property name="javax.persistence.jdbc.password" value="" />

			<!-- Hibernate -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect" />
			<property name="hibernate.hbm2ddl.auto" value="create" />
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="true" />

			<property name="hibernate.current_session_context_class"
				value="thread" />

			<property name="hibernate.connection.provider_class"
				value="org.hibernate.connection.C3P0ConnectionProvider" />
			<property name="hibernate.c3p0.acquire_increment" value="1" />
			<property name="hibernate.c3p0.idle_test_period" value="100" />
			<property name="hibernate.c3p0.max_size" value="10" />
			<property name="hibernate.c3p0.max_statements" value="10" />
			<property name="hibernate.c3p0.min_size" value="10" />
			<property name="hibernate.c3p0.timeout" value="100" />
		</properties>
	</persistence-unit>
</persistence>
